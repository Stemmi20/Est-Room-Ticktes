generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  teacher
  supervisor
}

model users {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  email     String @unique
  password  String
  address   String

  role    Role
  rooms   rooms[]
  tickets tickets[]
}

enum State {
  OPEN
  DONE
  INPROGRESS
}

model tickets {
  id       Int    @id @default(autoincrement())
  roomId   String
  title    String
  desc     String
  state    State
  creation String
  authorId Int

  author users @relation(fields: [authorId], references: [id])
  room   rooms @relation(fields: [roomId], references: [id])
}

model rooms {
  id           String @id
  supervisorId Int?

  supervisor users?    @relation(fields: [supervisorId], references: [id])
  tickets    tickets[]
}
